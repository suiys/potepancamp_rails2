<section class="container settings-wrapper">
  <h2>設定</h2>
  <div class="settings-container d-flex">
    <ul class="sidebar-menu nav flex-column">
      <li class="nav-item">
        <%= link_to "アカウント", "users/account", class: "sidebar-menu-item" %>
      </li>
      <li class="nav-item">
        <%= link_to "プロフィール", profile_path, class: "sidebar-menu-item selected" %>
      </li>
    </ul>
    <div class="settings-info">
      <div class="settings-info-index d-flex justify-content-between align-items-center">
        <h3>プロフィール</h3>
        <%= link_to "users/profile/edit", class: "btn-outline-primary edit-btn d-flex align-items-center" do %>
          <i class="fa-solid fa-pen-to-square"></i>
          編集
        <% end %>
      </div>
      <div class="settings-info-contents d-flex align-items-center">
        <label for="image">アイコン画像</label>
        <p id="image">
          
        </p>
      </div>
      <div class="settings-info-contents d-flex align-items-center">
        <label for="name">ユーザー名</label>
        <p id="name">
          <%= @user.name %>
        </p>
      </div>
      <div class="settings-info-contents d-flex align-items-center">
        <label for="introduction">自己紹介</label>
        <p id="introduction">
          <%= @user.introduction %>
        </p>
      </div>
    </div>
  </div>
</section>
