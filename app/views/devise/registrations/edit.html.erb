<section class="container settings-wrapper">
  <h2>設定</h2>
  <div class="settings-container d-flex">
    <%= render "shared/settings_sidebar_for_account" %>
    <div class="settings-info">
      <div class="settings-info-index d-flex justify-content-between align-items-center">
        <h3>アカウント</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="settings-info-contents d-flex align-items-center">
          <%= f.label :email, "メールアドレス" %>
          <p>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </p>
        </div>

        <div class="settings-info-contents d-flex align-items-center">
          <%= f.label :password do %>
            <span>変更後パスワード</span><br>
            <span class="label-description">*変更する場合のみ</span>
          <% end %>
          <p>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "変更後パスワードを入力" %>
          </p>
        </div>

        <div class="settings-info-contents d-flex align-items-center">
          <%= f.label :password_confirmation do %>
            <span>確認用パスワード</span><br>
            <span class="label-description">*変更する場合のみ</span>
          <% end %>
          <p>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "変更後パスワードを入力(確認用)" %>
          </p>
        </div>

        <div class="settings-info-contents d-flex align-items-center">
          <%= f.label :current_password, "現在のパスワード" %>
          <p>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "現在のパスワードを入力" %>
          </p>
        </div>

        <div class="settings-info-contents form-buttons d-flex justify-content-end gap-3">
          <%= link_to :back do %>
            <button class="btn cancel-btn">キャンセル</button>
          <% end %>
          <%= f.submit "保存", class: "btn confirm-btn settings-confirm-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
